ChildPort {
    background-color: #282828;
    margin: 2px;
    border-radius: 4px;
}

ChildPort Label {
    display: none;
}

ChildPort Button {
    width: 16px;
    height: 16px;

    background-image: resource("TreeEditor.Trash");
    /*-unity-background-scale-mode: scale-to-fit;*/
    background-size: 75%;
}

